<html xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  tal:omit-tag=""
  i18n:domain="eea">

<dl class="portlet annotator-portlet"
  tal:define="isViewTemplate context/@@plone_context_state/is_view_template;
              isEditTemplate python: 'edit' in context.REQUEST.URL0.split('/')[-1];"
  tal:condition="python: isViewTemplate or isEditTemplate">

  <dt class="portletHeader" tal:condition="view/data/label|nothing">
    <a tal:content="view/data/label"
      tal:attributes="href string:${view/context/absolute_url}"/>
  </dt>

  <dd class="portletItem annotator-portlet-body">
    <div class="annotator-errata"></div>
  </dd>

</dl>
</html>
